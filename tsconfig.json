{
  "compilerOptions": {
    "target": "es2023",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "@playwright/test"],
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/core/*"],
      "@utils/*": ["src/core/utils/*"],
      "@fixtures/*": ["src/core/fixtures/*"],
      "@projects/*": ["src/projects/*"],
      "@config/*": ["config/*"]
    }
  },

  "include": ["src", "config"]
}
